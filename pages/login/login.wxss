/* pages/login/login.wxss */
.page{
  width: 100%;
  height: 100%;
  background-color: #ffffff;
}
.content{
  position: fixed;
  top: 120rpx;
  width: 100%;
}
.logo{
  display: flex;
  justify-content: center;
  height: 200rpx;
}
.logo image{
  width: 160rpx;
  height: 160rpx;
}
.form{
  display: flex;
  flex-direction: column;
}
.form .item{
  display: flex;
  align-items: center;
  height: 80rpx;
  margin-top: 40rpx;
  border: 1px solid #d1d3d4;
  border-radius: 12rpx;
} 
.form .item image{
  width: 40rpx;
  height: 40rpx;
  margin: 0 20rpx;
}
.form .item input{
  flex-grow: 1;
  font-size: 28rpx;
  color: #686868;
}
.form .operate{
  margin-top: 120rpx; 
}
.form .operate button{
  background-color: #3190e7;
  color: #ffffff;
}
