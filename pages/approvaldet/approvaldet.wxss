@import "../../assets/css/details.wxss";

.page{
  height: 100%;
  background-color: #ffffff;
}
.operate{
  display: flex;
  justify-content: center;
  margin-top: 100rpx;
}
.operate .btn{
  width: 180rpx;
  height: 60rpx;
  margin: 0 50rpx;
  border-radius: 8rpx;
  line-height: 60rpx;
  text-align: center;
  color: #ffffff;
  font-size: 28rpx;
  background-color: #3190e7;
}

.dialog-box{
  width: 100%;
  padding: 30rpx;
}
.dialog-box textarea{
  width: 100%;
  height: 320rpx;
  padding: 10rpx;
  box-sizing: border-box;
  border-radius: 12rpx;
  border: 1rpx solid #d1d3d4;
  font-size: 28rpx;
  color: #272727;
}
