.base{
  display: flex;
  align-items: center;
  height: 180rpx;
  margin-bottom: 20rpx; 
  background-color: #ffffff;
}
.base .img{
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: 0 30rpx;
}
.base .img image{
  width: 96rpx;
  height: 96rpx;
}
.base .meta .more{
  display: flex;
  align-items: center;
  height: 60rpx;
}
.base .meta .more .user{
  margin-right: 30rpx;
  font-size: 28rpx;
  color: #272727;
}
.base .meta .more .nature{
  display: flex;
  justify-content: center;
  height: 36rpx;
  padding: 0 20rpx;
  margin-right: 10rpx;
  border-radius: 18rpx;
  font-size: 24rpx;
}
.ordinary{
  color:  #38acff;
  border: 1rpx solid #38acff;
}
.matter{
  color:  #ff6000;
  border: 1rpx solid #ff6000;
}
.exigency{
  color: #FF0000;
  border: 1rpx solid #FF0000;
}
.facility{
  color: #00c205;
  border: 1rpx solid #00c205;
}
.notice{
  color: #38acff;
  border: 1rpx solid #38acff;
}
.everyday{
  color: #666666;
  border: 1rpx solid #666666;
}
.handled{
  color: #00c205;
  border: 1rpx solid #00c205;
}
.untreated{
  color: #ff6000;
  border: 1rpx solid #ff6000;
}
.base .meta .date{
  font-size: 24rpx;
  color: #686868;
}

.main{
  padding: 30rpx 30rpx 0;
  margin-bottom: 20rpx; 
  background-color: #ffffff;
}
.main .content{
  display: table;
  width: 100%;
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color: #272727;
}
.main .content .name{
  display: table-cell; 
  vertical-align:top;
  width: 160rpx;
  line-height: 40rpx;
  color: #686868;
}
.main .content .price{
  display: table-cell; 
  vertical-align:top;
  line-height: 40rpx;
}
.main .images{
  display: flex;
  flex-wrap: wrap;
}
.main .images .item{
  width: 33.333%;
  height: 230rpx;
  padding: 5rpx;
}
.main .images .item image{
  width: 100%;
  height: 100%;
}
.main .position{
  display: flex;
  align-items: center;
  height: 86rpx;
  font-size: 28rpx;
  color: #272727;
}
.main .position image{
  width: 27rpx;
  height: 33rpx;
  margin-right: 10rpx;
}
.main .position .price{
  max-width: 670rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden; 
}

.consults{
  margin-bottom: 20rpx; 
  padding: 0 30rpx 30rpx;
  background-color: #ffffff;
}
.consults .title{
  line-height: 60rpx;
  font-size: 28rpx;
  color: #272727;
}
.consults .readUsers{
  display: flex;
  flex-wrap: wrap;
}
.consults .readUsers .item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 80rpx;
  height: 140rpx;
  margin-right: 30rpx;
}
.consults .readUsers .item .img{
  width: 78rpx;
  height: 78rpx;
  border-radius: 50%;
  overflow: hidden;
}
.consults .readUsers .item .img image{
  width: 78rpx;
  height: 78rpx;
}
.consults .readUsers .item text{
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #272727;
}