@import "../../assets/css/details.wxss";

.img-show{
  margin-bottom: 20rpx;
  padding: 0 30rpx 30rpx;
  background-color: #ffffff;
}
.img-show .title{
  line-height: 60rpx;
  color: #272727;
  font-size: 28rpx;
}
.img-show .images{
  display: flex;
  flex-wrap: wrap;
}
.img-show .images .item{
  width: 33.333%;
  height: 230rpx;
  padding: 5rpx;
}
.img-show .images .item image{
  width: 100%;
  height: 100%;
}

.logs{
  margin-bottom: 20rpx;
  padding: 0 30rpx;
  background-color: #ffffff;
}
.logs .title{
  line-height: 60rpx;
  color: #272727;
  font-size: 28rpx;
}
.logList .item{
  display: flex;
  align-items: flex-start;
  min-height: 120rpx;
  padding-bottom: 20rpx;
}
.bd{
    position: relative;
}
.bd::before{
    content: "";
    position: absolute; 
    top: 40rpx; 
    left: 180rpx; 
    bottom: 0;
    width: 1rpx; 
    background: #d1d3d4;
}
.logList .item .when{
  display: flex;
  flex-direction: column;
  width: 120rpx;
  text-align: center;
}
.logList .item .when .time{
  line-height: 40rpx;
  font-size: 28rpx;
  color: #272727;
}
.logList .item .when .date{
  font-size: 20rpx;
  color: #686868;
}
.logList .item .img{
  width: 120rpx;
  height: 40rpx;
  padding: 0 40rpx;
}
.logList .item .img image{
  width: 100%; 
  height: 100%;
}
.logList .item .details{
  width: 450rpx;
  display: flex;
  flex-direction: column;
}
.logList .item .details text{
  line-height: 40rpx;
  font-size: 28rpx;
}
.logList .item .details .blue{
  line-height: 40rpx;
  font-size: 28rpx;
  color: #3190e7;
}
