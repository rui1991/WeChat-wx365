/**app.wxss**/
view, text, navigator {
  box-sizing: border-box;
}
page{
  width: 100%;
  height: 100%;
  font-size: 16px;
  background-color: #f0f0f0;
}
.container {
  padding-right: 30rpx;
  padding-left: 30rpx;
  margin-right: auto;
  margin-left: auto;
} 

.bd-right{
    position: relative;
}
.bd-right::before{
    content: "";
    position: absolute; 
    top: 0; 
    right: 0; 
    width: 1rpx; 
    height: 100%; 
    background: #f0f0f0;
}
.bd-bottom{
    position: relative;
}
.bd-bottom::after{
    content: "";
    position: absolute; 
    left: 0; 
    bottom: 0; 
    width: 100%; 
    height: 1rpx; 
    background: #f0f0f0;
}

